.nav-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    font-family: "Josefin Sans", sans-serif;
    background-color: #2E2D2B;
    height: 75px;
    text-align: center;
    text-transform: uppercase;
}

.nav-row li a {
    color: #f9f9f9;
    text-decoration: none;
}

.nav-item {
    display: inline-block;
    font-size: 25px;
}

.page-header {
    height: 520px;
    width: 1280px;
    background-size: cover;
/*    zoom: -210%;  only supported on Exploder */
    transform: scale(1); /* this seems supported */
    background-image: url('../img/header-img.jpg')
}

.header-content {
    border-width: thin;
    border-color: red;
}

.main-heading {
    font-family: "Josefin Sans", sans-serif;
    font-size: 115px;
    font-weight: 900;
    text-align: center;
    padding: 170px;
}

.sub-heading {
    font-family: "Dancing Script";
    font-size: 72px;
    color: #fff;
    text-align: center;
    text-shadow: 3px 3px 5px #333;
}

.blog-row {
    width: 1127px;
    background-color: #FEF9EC;
}

.meta{
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: space-around;
    height: 417px;
    width: 540px;
    font-family: "Josefin Sans", sans-serif;
    font-size: 12px;
/*    font-weight: 700;*/
    text-transform: uppercase;
    background-color: #FFFFFF;
    box-shadow: -3px 3px 5px #333;
}

.entry-title {
    font-family: "Josefin Sans", sans-serif;
    font-size: 25px;
}

.blog-img {
    max-width: 250px;
    max-height: 250px;
/*    align-content: flex-end;*/
    
}
#dino {
    background-image: url(../img/dino.jpg);
}

#xx {
    /* why doesn't the image show? */
    background-image: url(../img/xx.png);
}

#yhact-img {
    background-image: url(../img/yhact.jpg);
}

.primary-txt {
    font-family: "Noto Serif", serif;
    font-size: 16px;
}

#aside {
    width: 350px;
    background-color: #EFEADF;
}

.auth-pic {
    background-image: url(../img/author.jpeg);
}

.aside-heading {
    font-family: "Josefin Sans", sans-serif;
    font-size: 25px;
}

#bio {
    font-family: "Noto Serif", serif;
    font-size: 16px;
}